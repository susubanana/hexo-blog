#header
  text-shadow 0 0 1px #fff
  margin 0 auto 50px
  a
    color #999
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px

  .line
    float left
    width 7em
    height 7.5em
    margin 0 auto
    @media screen and (max-width: 480px)
      width 6.5em
      float left
      position relative
    @media screen and (max-width: 320px)
      width 5.5em
      height 6em
      float left
      position relative
    span
      display block
      width 0.5em
      height 0.5em
      border-right 0.2em solid #fff
      margin 0 auto
      @media screen and (max-width: 480px)
        position absolute
        left 3em
      @media screen and (max-width: 320px)
        position absolute
        left 2.5em

    .author
      width w=(110/16)em
      height w
      margin 0 auto
      if dataURI
        background no-repeat url(/images/author.jpg) center top
      else
        background no-repeat url(/images/author.jpg) center top
      background-size w w
      border-radius (w/2)
      transition transform 2s ease-out
      &:hover
        transform rotateZ(360deg)
      @media screen and (max-width: 480px)
        position: absolute;
        top 0.6em
      @media screen and (max-width: 320px)
        width 5.5em
        height 5.5em

  .my-word
    float left
    margin 20px 0 0 15px
    @media screen and (max-width: 1260px)
      margin 20px 0 0 15px
    @media screen and (max-width: 480px)
      margin 20px 0 0 10px
    @media screen and (max-width: 320px)
      margin 10px 0 0 5px
    h2
      font-size 25px
      text-shadow 1px 1px 2px #999
      color color-font
      margin 0 0 0 5px
      padding-bottom 5px
      line-height: 1.5;
      font-family Microsoft YaHei
      @media screen and (max-width: 480px)
        font-size 22px
      @media screen and (max-width: 320px)
        font-size 20px
    p
      font-size  16px
      line-height 1.5
      color #060
      @media screen and (max-width: 480px)
        font-size 14px

  #main-nav
    font-family font-title
    line-height 2.5em
    margin-top 50px
    ul
      list-style none
      li
        float left
        display inline
        background: #fff;
        background: -webkit-gradient(linear,0% 40%,0% 70%,from(rgba(255, 255, 255, 0.9)),to(rgba(255, 255, 255, 0.7)));
        background: -moz-linear-gradient(center right, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7));
        a
          height 35px
          line-height 35px
          float left
          display inline
          color color-title
          font-weight 400
          color rgba(170,170,170,0.3)
          text-shadow 0px -1px 0px #999
          padding: 0 20px;
          &:hover
            color rgba(245,245,245,1)
        &:hover
          background rgba(90, 90, 90, 0.3)
        position:relative;
        &:before,&:after
          content:"";
          position:absolute;
          z-index:-1;
          -webkit-box-shadow:4px 2px 4px rgba(127,127,127,0.8);
          -moz-box-shadow:4px 2px 4px rgba(127,127,127,0.8);
          box-shadow:4px 2px 4px rgba(127,127,127,0.8);
          top:0px;
          bottom:0px;
          left:1px;
          right:1px;
          -moz-border-radius:100px / 10px;
          border-radius:10px / 1px;
        &:after
          right:3px;
          left:auto;
          -webkit-transform:skew(8deg) rotate(3deg);
          -moz-transform:skew(8deg) rotate(3deg);
          -ms-transform:skew(8deg) rotate(3deg);
          -o-transform:skew(8deg) rotate(3deg);
          transform:skew(8deg) rotate(3deg);