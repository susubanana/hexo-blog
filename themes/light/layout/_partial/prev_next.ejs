<div class="paging">
    <% if (page.prev){ %>
    <span>上一篇：<a href="<%- config.root %><%- page.prev.path %>" class="prev" title="<%= page.prev.title %>"><%= page.prev.title %></a></span>
    <% } %>
    <% if (page.next){ %>
    <span>下一篇：<a href="<%- config.root %><%- page.next.path %>" class="next" title="<%= page.next.title %>"><%= page.next.title %></a></span>
    <% } %>
</div>